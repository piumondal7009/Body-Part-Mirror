<Window x:Class="BodyPartMirror.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Body Part Mirror" Height="700" Width="1000" Background="#FFFDF6">
  <Window.Resources>
    <Style x:Key="DropTargetStyle" TargetType="Border">
      <Setter Property="CornerRadius" Value="10" />
      <Setter Property="BorderThickness" Value="2" />
      <Setter Property="BorderBrush" Value="#FF7A9E" />
      <Setter Property="Background" Value="#FFF5EE" />
      <Setter Property="Padding" Value="6" />
    </Style>
    <Style x:Key="DraggableItemStyle" TargetType="ListBoxItem">
      <Setter Property="Margin" Value="0,6" />
      <Setter Property="Padding" Value="10" />
      <Setter Property="Background" Value="#FFF0F5" />
      <Setter Property="BorderBrush" Value="#FF7A9E" />
      <Setter Property="BorderThickness" Value="1" />
      <Setter Property="HorizontalContentAlignment" Value="Center" />
      <Setter Property="FontSize" Value="18" />
    </Style>
  </Window.Resources>
  <Grid Margin="20">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
      <TextBlock Text="Body Part Mirror" FontSize="30" FontWeight="Bold" Foreground="#FF4A6E" />
      <TextBlock Text="  â€¢  Learn and Match" FontSize="20" Foreground="#FF7A9E" VerticalAlignment="Bottom" Margin="8,0,0,2" />
    </StackPanel>

    <TabControl Grid.Row="1" FontSize="18" BorderThickness="0" Background="Transparent">
      <TabItem Header="Learning Mode">
        <Grid Margin="10">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="260" />
          </Grid.ColumnDefinitions>

          <StackPanel Grid.Column="0">
            <TextBlock Text="Drag these parts" FontWeight="Bold" Margin="0,0,0,10" />
            <ListBox x:Name="LearningPartsList"
                     PreviewMouseMove="LearningPartsList_PreviewMouseMove"
                     ItemContainerStyle="{StaticResource DraggableItemStyle}" />
          </StackPanel>

          <Grid Grid.Column="1" Margin="16,0">
            <Border Background="#FFF" CornerRadius="20" BorderThickness="2" BorderBrush="#FFE2E2" Padding="16">
              <Canvas x:Name="LearningCanvas">
                <Ellipse Width="120" Height="120" Fill="#FFF0F5" Stroke="#FF7A9E" StrokeThickness="2" Canvas.Left="170" Canvas.Top="10" />
                <Rectangle Width="180" Height="240" Fill="#FFF0F5" Stroke="#FF7A9E" StrokeThickness="2" RadiusX="20" RadiusY="20" Canvas.Left="140" Canvas.Top="140" />
                <Rectangle Width="50" Height="140" Fill="#FFF0F5" Stroke="#FF7A9E" StrokeThickness="2" RadiusX="20" RadiusY="20" Canvas.Left="60" Canvas.Top="170" />
                <Rectangle Width="50" Height="140" Fill="#FFF0F5" Stroke="#FF7A9E" StrokeThickness="2" RadiusX="20" RadiusY="20" Canvas.Left="350" Canvas.Top="170" />
                <Rectangle Width="70" Height="160" Fill="#FFF0F5" Stroke="#FF7A9E" StrokeThickness="2" RadiusX="20" RadiusY="20" Canvas.Left="170" Canvas.Top="380" />
                <Rectangle Width="70" Height="160" Fill="#FFF0F5" Stroke="#FF7A9E" StrokeThickness="2" RadiusX="20" RadiusY="20" Canvas.Left="250" Canvas.Top="380" />

                <Border x:Name="TargetHead" Style="{StaticResource DropTargetStyle}" Tag="Head" AllowDrop="True"
                        Drop="LearningTarget_Drop" DragEnter="LearningTarget_DragEnter"
                        Canvas.Left="188" Canvas.Top="30" Width="110" Height="60">
                  <TextBlock Text="Head" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Border>
                <Border x:Name="TargetTorso" Style="{StaticResource DropTargetStyle}" Tag="Chest" AllowDrop="True"
                        Drop="LearningTarget_Drop" DragEnter="LearningTarget_DragEnter"
                        Canvas.Left="165" Canvas.Top="200" Width="130" Height="70">
                  <TextBlock Text="Chest" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Border>
                <Border x:Name="TargetLeftArm" Style="{StaticResource DropTargetStyle}" Tag="Left Arm" AllowDrop="True"
                        Drop="LearningTarget_Drop" DragEnter="LearningTarget_DragEnter"
                        Canvas.Left="30" Canvas.Top="200" Width="110" Height="60">
                  <TextBlock Text="Left Arm" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Border>
                <Border x:Name="TargetRightArm" Style="{StaticResource DropTargetStyle}" Tag="Right Arm" AllowDrop="True"
                        Drop="LearningTarget_Drop" DragEnter="LearningTarget_DragEnter"
                        Canvas.Left="330" Canvas.Top="200" Width="110" Height="60">
                  <TextBlock Text="Right Arm" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Border>
                <Border x:Name="TargetLeftLeg" Style="{StaticResource DropTargetStyle}" Tag="Left Leg" AllowDrop="True"
                        Drop="LearningTarget_Drop" DragEnter="LearningTarget_DragEnter"
                        Canvas.Left="150" Canvas.Top="430" Width="100" Height="60">
                  <TextBlock Text="Left Leg" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Border>
                <Border x:Name="TargetRightLeg" Style="{StaticResource DropTargetStyle}" Tag="Right Leg" AllowDrop="True"
                        Drop="LearningTarget_Drop" DragEnter="LearningTarget_DragEnter"
                        Canvas.Left="250" Canvas.Top="430" Width="100" Height="60">
                  <TextBlock Text="Right Leg" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Border>
              </Canvas>
            </Border>
          </Grid>

          <StackPanel Grid.Column="2" Background="#FFF" Padding="12" CornerRadius="16">
            <TextBlock Text="Learning Card" FontWeight="Bold" Margin="0,0,0,8" />
            <TextBlock x:Name="LearningCardTitle" FontSize="20" FontWeight="SemiBold" Foreground="#FF4A6E" />
            <TextBlock x:Name="LearningCardDescription" TextWrapping="Wrap" Margin="0,8,0,0" />
            <Border Margin="0,16,0,0" Background="#FFF5EE" Padding="10" CornerRadius="10">
              <TextBlock x:Name="LearningCardTip" TextWrapping="Wrap" Foreground="#FF7A9E" />
            </Border>
          </StackPanel>
        </Grid>
      </TabItem>

      <TabItem Header="Quiz Mode">
        <Grid Margin="10">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="220" />
          </Grid.ColumnDefinitions>

          <StackPanel Grid.Column="0">
            <TextBlock Text="Drag the right part" FontWeight="Bold" Margin="0,0,0,10" />
            <ListBox x:Name="QuizPartsList"
                     PreviewMouseMove="QuizPartsList_PreviewMouseMove"
                     ItemContainerStyle="{StaticResource DraggableItemStyle}" />
          </StackPanel>

          <Grid Grid.Column="1" Margin="16,0">
            <Border Background="#FFF" CornerRadius="20" BorderThickness="2" BorderBrush="#FFE2E2" Padding="16">
              <Canvas x:Name="QuizCanvas">
                <Ellipse Width="120" Height="120" Fill="#FFF0F5" Stroke="#FF7A9E" StrokeThickness="2" Canvas.Left="170" Canvas.Top="10" />
                <Rectangle Width="180" Height="240" Fill="#FFF0F5" Stroke="#FF7A9E" StrokeThickness="2" RadiusX="20" RadiusY="20" Canvas.Left="140" Canvas.Top="140" />
                <Rectangle Width="50" Height="140" Fill="#FFF0F5" Stroke="#FF7A9E" StrokeThickness="2" RadiusX="20" RadiusY="20" Canvas.Left="60" Canvas.Top="170" />
                <Rectangle Width="50" Height="140" Fill="#FFF0F5" Stroke="#FF7A9E" StrokeThickness="2" RadiusX="20" RadiusY="20" Canvas.Left="350" Canvas.Top="170" />
                <Rectangle Width="70" Height="160" Fill="#FFF0F5" Stroke="#FF7A9E" StrokeThickness="2" RadiusX="20" RadiusY="20" Canvas.Left="170" Canvas.Top="380" />
                <Rectangle Width="70" Height="160" Fill="#FFF0F5" Stroke="#FF7A9E" StrokeThickness="2" RadiusX="20" RadiusY="20" Canvas.Left="250" Canvas.Top="380" />

                <Border x:Name="QuizTargetHead" Style="{StaticResource DropTargetStyle}" Tag="Head" AllowDrop="True"
                        Drop="QuizTarget_Drop" DragEnter="QuizTarget_DragEnter"
                        Canvas.Left="188" Canvas.Top="30" Width="110" Height="60">
                  <TextBlock Text="Head" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Border>
                <Border x:Name="QuizTargetTorso" Style="{StaticResource DropTargetStyle}" Tag="Chest" AllowDrop="True"
                        Drop="QuizTarget_Drop" DragEnter="QuizTarget_DragEnter"
                        Canvas.Left="165" Canvas.Top="200" Width="130" Height="70">
                  <TextBlock Text="Chest" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Border>
                <Border x:Name="QuizTargetLeftArm" Style="{StaticResource DropTargetStyle}" Tag="Left Arm" AllowDrop="True"
                        Drop="QuizTarget_Drop" DragEnter="QuizTarget_DragEnter"
                        Canvas.Left="30" Canvas.Top="200" Width="110" Height="60">
                  <TextBlock Text="Left Arm" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Border>
                <Border x:Name="QuizTargetRightArm" Style="{StaticResource DropTargetStyle}" Tag="Right Arm" AllowDrop="True"
                        Drop="QuizTarget_Drop" DragEnter="QuizTarget_DragEnter"
                        Canvas.Left="330" Canvas.Top="200" Width="110" Height="60">
                  <TextBlock Text="Right Arm" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Border>
                <Border x:Name="QuizTargetLeftLeg" Style="{StaticResource DropTargetStyle}" Tag="Left Leg" AllowDrop="True"
                        Drop="QuizTarget_Drop" DragEnter="QuizTarget_DragEnter"
                        Canvas.Left="150" Canvas.Top="430" Width="100" Height="60">
                  <TextBlock Text="Left Leg" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Border>
                <Border x:Name="QuizTargetRightLeg" Style="{StaticResource DropTargetStyle}" Tag="Right Leg" AllowDrop="True"
                        Drop="QuizTarget_Drop" DragEnter="QuizTarget_DragEnter"
                        Canvas.Left="250" Canvas.Top="430" Width="100" Height="60">
                  <TextBlock Text="Right Leg" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Border>
              </Canvas>
            </Border>
          </Grid>

          <StackPanel Grid.Column="2" Background="#FFF" Padding="12" CornerRadius="16">
            <TextBlock Text="Quiz Card" FontWeight="Bold" Margin="0,0,0,8" />
            <TextBlock Text="Match:" FontSize="16" />
            <TextBlock x:Name="QuizPrompt" FontSize="20" FontWeight="SemiBold" Foreground="#FF4A6E" Margin="0,4,0,10" />
            <TextBlock x:Name="QuizFeedback" TextWrapping="Wrap" />
            <TextBlock x:Name="QuizScore" FontWeight="Bold" Margin="0,16,0,0" />
            <Button Content="New Question" Margin="0,12,0,0" Padding="8" Click="NewQuestionButton_Click" />
          </StackPanel>
        </Grid>
      </TabItem>
    </TabControl>
  </Grid>
</Window>
